            transform: rotate(360deg);
        }
    }

    .no-data {
        text-align: center;
        color: #999;
        padding: 20px;
        font-style: italic;
    }
</style>

<div class="pc-details-container">
    <div class="breadcrumb">
        <a asp-controller="Home" asp-action="Index">Dashboard</a> /
        <a asp-controller="Home" asp-action="ShowAll">All PCs</a> /
        Line @Model.LineNumber / PC @Model.PCNumber
    </div>

    <div class="header-section">
        <h1>
            <span class="status-indicator @(Model.IsOnline ? "online" : "offline")"></span>
            PC @Model.PCNumber - Line @Model.LineNumber
        </h1>
        <div class="status-badges">
            <span class="badge @(Model.IsOnline ? "badge-success" : "badge-danger")">
                @(Model.IsOnline ? "Online" : "Offline")
            </span>
            <span class="badge @(Model.IsApplicationRunning ? "badge-success" : "badge-secondary")">
                App: @(Model.IsApplicationRunning ? "Running" : "Stopped")
            </span>
        </div>
    </div>

    <div class="details-grid">
        <div class="info-card">
            <h3>PC Information</h3>
            <table class="info-table">
                <tr>
                    <td><strong>IP Address:</strong></td>
                    <td>@Model.IPAddress</td>
                </tr>
                <tr>
                    <td><strong>Last Heartbeat:</strong></td>
                    <td id="lastHeartbeat">@(Model.LastHeartbeat?.ToString("yyyy-MM-dd HH:mm:ss") ?? "Never")</td>
                </tr>
                <tr>
                    <td><strong>Last Updated:</strong></td>
                    <td>@Model.LastUpdated.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
                <tr>
                    <td><strong>Registered:</strong></td>
                    <td>@Model.RegisteredDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            </table>
        </div>

        <div class="info-card">
            <h3>File Paths</h3>
            <table class="info-table">
                <tr>
                    <td><strong>Config File:</strong></td>
                    <td><code>@Model.ConfigFilePath</code></td>
                </tr>
                <tr>
                    <td><strong>Log Path:</strong></td>
                    <td><code>@Model.LogFolderPath</code></td>
                </tr>
                <tr>
                    <td><strong>Model Folder:</strong></td>
                    <td><code>@Model.ModelFolderPath</code></td>
                </tr>
            </table>
        </div>
    </div>

    <div id="statusMessage"></div>

    <div class="section">
        <h2>Models Management</h2>
        <div class="models-section">
            <div class="model-selector">
                <label for="modelDropdown"><strong>Available Models:</strong></label>
                <select id="modelDropdown" class="form-control">
                    @foreach (var m in Model.Models.OrderBy(x => x.ModelName))
                    {
                        <option value="@m.ModelName" selected="@m.IsCurrentModel">
                            @m.ModelName @(m.IsCurrentModel ? "(Current)" : "")
                        </option>
                    }
                </select>
                <button onclick="changeModel()" class="btn btn-primary" id="applyBtn">Apply Model</button>
            </div>

            <div class="model-actions">
                <button onclick="showUploadDialog()" class="btn btn-success">Upload New Model</button>
                <button onclick="downloadModel()" class="btn btn-info" id="downloadBtn">Download Model</button>
                <button onclick="deleteModel()" class="btn btn-danger" id="deleteBtn">Delete Model</button>
                <button onclick="refreshModels()" class="btn btn-secondary">Refresh List</button>
            </div>

            <div id="modelProgress" style="display:none;">
                <div class="progress-bar"><div class="progress-bar-fill" id="modelProgressBar"></div></div>
                <p id="modelProgressText" style="margin-top: 10px; text-align: center;"></p>
            </div>
        </div>
    </div>

    <div class="section">
        <h2>Configuration File</h2>
        <div class="config-section">
            @if (Model.ConfigFile != null)
            {
                <div style="margin-bottom: 15px;">
                    <p><strong>Config File Location:</strong> @Model.ConfigFilePath</p>
                    <p><strong>Last Modified:</strong> @Model.ConfigFile.LastModified.ToString("yyyy-MM-dd HH:mm:ss")</p>
                </div>

                <div class="model-actions">
                    <button onclick="downloadConfig()" class="btn btn-info" id="downloadConfigBtn">
                        Download Config File
                    </button>
                    <button onclick="uploadConfig()" class="btn btn-success" id="uploadConfigBtn">
                        Upload Config File
                    </button>
                </div>

                <div id="configProgress" style="display:none; margin-top: 15px;">
                    <div class="progress-bar"><div class="progress-bar-fill" id="configProgressBar"></div></div>
                    <p id="configProgressText" style="margin-top: 10px;"></p>
                </div>
            }
            else
            {
                <p class="no-data">Config file not yet uploaded from agent.</p>
                <button onclick="location.reload()" class="btn btn-secondary">Refresh Page</button>
            }
        </div>
    </div>
</div>

<!-- Model Upload Modal -->
<div id="uploadModal" class="modal" style="display:none;">
    <div class="modal-content">
        <span class="close" onclick="closeUploadDialog()">&times;</span>
        <h2>Upload New Model</h2>
        <p style="color: #666; margin-bottom: 20px;">Upload a ZIP file containing the model folder.</p>
        <form id="uploadForm" enctype="multipart/form-data">
            <input type="file" id="modelFile" name="modelFile" accept=".zip" required style="margin-bottom: 15px; display: block; width: 100%;" />
            <button type="submit" class="btn btn-primary">Upload</button>
            <button type="button" onclick="closeUploadDialog()" class="btn btn-secondary">Cancel</button>
        </form>
        <div id="uploadStatus" style="margin-top: 15px;"></div>
    </div>
</div>

<!-- Config Upload Modal -->
<div id="configUploadModal" class="modal" style="display:none;">
    <div class="modal-content">
        <span class="close" onclick="closeConfigUploadDialog()">&times;</span>
        <h2>Upload Config File</h2>
        <p style="color: #666; margin-bottom: 20px;">Upload a config.ini file to replace the current configuration.</p>
        <form id="configUploadForm">
            <input type="file" id="configFile" name="configFile" accept=".ini,.txt" required style="margin-bottom: 15px; display: block; width: 100%;" />
            <button type="submit" class="btn btn-primary">Upload</button>
            <button type="button" onclick="closeConfigUploadDialog()" class="btn btn-secondary">Cancel</button>
        </form>
        <div id="configUploadStatus" style="margin-top: 15px;"></div>
    </div>
</div>

@section Scripts {
    <script>
        const pcId = @Model.PCId;

        // ====================================
        // MODEL MANAGEMENT FUNCTIONS
        // ====================================

        function changeModel() {
            const modelName = document.getElementById('modelDropdown').value;
            if (!modelName) {
                showStatus('Please select a model', 'warning');
                return;
            }

            if (confirm('Apply model: ' + modelName + '?')) {
                const btn = document.getElementById('applyBtn');
                btn.disabled = true;
                btn.innerHTML = 'Applying... <span class="spinner"></span>';
                showProgress('modelProgress', 'Sending command to agent...');

                fetch('@Url.Action("ChangeModel", "PC")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: 'pcId=' + pcId + '&modelName=' + encodeURIComponent(modelName)
                }).then(r => r.json()).then(data => {
                    if (data.success) {
                        showStatus('Model change initiated...', 'info');
                        updateProgress('modelProgressBar', 50, 'Agent processing...');
                        pollModelChange(modelName);
                    } else {
                        showStatus('Error: ' + data.message, 'danger');
                        btn.disabled = false;
                        btn.innerHTML = 'Apply Model';
                        hideProgress('modelProgress');
                    }
                }).catch(e => {
                    showStatus('Error: ' + e, 'danger');
                    btn.disabled = false;
                    btn.innerHTML = 'Apply Model';
                    hideProgress('modelProgress');
                });
            }
        }

        function pollModelChange(modelName) {
            let pollCount = 0;
            const interval = setInterval(() => {
                fetch('/PC/GetModels?pcId=' + pcId).then(r => r.json()).then(data => {
                    if (data.success) {
                        const current = data.models.find(m => m.isCurrent);
                        if (current && current.modelName === modelName) {
                            clearInterval(interval);
                            updateProgress('modelProgressBar', 100, 'Complete!');
                            showStatus('✓ Model "' + modelName + '" applied successfully!', 'success');
                            setTimeout(() => {
                                refreshModels();
                                hideProgress('modelProgress');
                                document.getElementById('applyBtn').disabled = false;
                                document.getElementById('applyBtn').innerHTML = 'Apply Model';
                            }, 2000);
                        } else if (pollCount++ > 30) {
                            clearInterval(interval);
                            showStatus('Timeout. Check agent status.', 'warning');
                            hideProgress('modelProgress');
                            document.getElementById('applyBtn').disabled = false;
                            document.getElementById('applyBtn').innerHTML = 'Apply Model';
                        } else {
                            updateProgress('modelProgressBar', 50 + (pollCount * 1.5), 'Waiting...');
                        }
                    }
                }).catch(() => pollCount++);
            }, 1000);
        }

        function downloadModel() {
            const modelName = document.getElementById('modelDropdown').value;
            if (!modelName) {
                showStatus('Please select a model', 'warning');
                return;
            }

            if (confirm('Download model: ' + modelName + '?')) {
                const btn = document.getElementById('downloadBtn');
                btn.disabled = true;
                btn.innerHTML = 'Processing... <span class="spinner"></span>';
                showProgress('modelProgress', 'Requesting ZIP from agent...');

                fetch('@Url.Action("DownloadModel", "PC")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: 'pcId=' + pcId + '&modelName=' + encodeURIComponent(modelName)
                }).then(r => r.json()).then(data => {
                    if (data.success) {
                        showStatus('Download initiated...', 'info');
                        updateProgress('modelProgressBar', 30, 'Agent zipping...');
                        pollModelDownload(data.commandId, modelName);
                    } else {
                        showStatus('Error: ' + data.message, 'danger');
                        btn.disabled = false;
                        btn.innerHTML = 'Download Model';
                        hideProgress('modelProgress');
                    }
                }).catch(e => {
                    showStatus('Error: ' + e, 'danger');
                    btn.disabled = false;
                    btn.innerHTML = 'Download Model';
                    hideProgress('modelProgress');
                });
            }
        }

        function pollModelDownload(commandId, modelName) {
            let pollCount = 0;
            const interval = setInterval(() => {
                fetch('/Model/CheckDownloadStatus?commandId=' + commandId).then(r => r.json()).then(data => {
                    if (data.status === 'Completed') {
                        clearInterval(interval);
                        updateProgress('modelProgressBar', 100, 'ZIP created! Downloading...');
                        if (data.modelFileId) {
                            window.location.href = '/Model/DownloadModelFile?modelFileId=' + data.modelFileId;
                            showStatus('✓ Download started!', 'success');
                        }
                        setTimeout(() => {
                            hideProgress('modelProgress');
                            document.getElementById('downloadBtn').disabled = false;
                            document.getElementById('downloadBtn').innerHTML = '📥 Download Model';
                        }, 2000);
                    } else if (data.status === 'Failed') {
                        clearInterval(interval);
                        showStatus('Download failed: ' + (data.message || 'Unknown error'), 'danger');
                        hideProgress('modelProgress');
                        document.getElementById('downloadBtn').disabled = false;
                        document.getElementById('downloadBtn').innerHTML = 'Download Model';
                    } else if (pollCount++ > 60) {
                        clearInterval(interval);
                        showStatus('Timeout. Check agent status.', 'warning');
                        hideProgress('modelProgress');
                        document.getElementById('downloadBtn').disabled = false;
                        document.getElementById('downloadBtn').innerHTML = 'Download Model';
                    } else {
                        updateProgress('modelProgressBar', 30 + pollCount, 'Creating ZIP... (' + pollCount + 's)');
                    }
                }).catch(() => pollCount++);
            }, 1000);
        }

        function deleteModel() {
            const modelName = document.getElementById('modelDropdown').value;
            if (!modelName) {
                showStatus('Please select a model', 'warning');
                return;
            }

            if (confirm('⚠️ DELETE model: ' + modelName + '?\\n\\nThis action CANNOT be undone!')) {
                const btn = document.getElementById('deleteBtn');
                btn.disabled = true;

                fetch('@Url.Action("DeleteModel", "PC")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: 'pcId=' + pcId + '&modelName=' + encodeURIComponent(modelName)
                }).then(r => r.json()).then(data => {
                    showStatus(data.message, data.success ? 'success' : 'danger');
                    btn.disabled = false;
                    if (data.success) setTimeout(() => refreshModels(), 2000);
                }).catch(e => {
                    showStatus('Error: ' + e, 'danger');
                    btn.disabled = false;
                });
            }
        }

        function refreshModels() {
            fetch('/PC/GetModels?pcId=' + pcId).then(r => r.json()).then(data => {
                if (data.success) {
                    const dropdown = document.getElementById('modelDropdown');
                    const currentValue = dropdown.value;
                    dropdown.innerHTML = '';

                    data.models.sort((a, b) => a.modelName.localeCompare(b.modelName));

                    data.models.forEach(model => {
                        const option = document.createElement('option');
                        option.value = model.modelName;
                        option.textContent = model.modelName + (model.isCurrent ? ' (Current)' : '');
                        option.setAttribute('data-current', model.isCurrent);
                        if (model.isCurrent) option.selected = true;
                        dropdown.appendChild(option);
                    });

                    showStatus('✓ Models list refreshed', 'success');
                    setTimeout(() => hideStatus(), 2000);
                }
            }).catch(e => showStatus('Error: ' + e, 'danger'));
        }

        // ====================================
        // CONFIG MANAGEMENT FUNCTIONS
        // ====================================

        function downloadConfig() {
            const btn = document.getElementById('downloadConfigBtn');
            btn.disabled = true;
            btn.innerHTML = 'Preparing... <span class="spinner"></span>';

            fetch('@Url.Action("DownloadConfig", "PC")?pcId=' + pcId)
                .then(response => {
                    if (!response.ok) throw new Error('Download failed');

                    const disposition = response.headers.get('Content-Disposition');
                    let filename = 'config.txt';

                    if (disposition && disposition.includes('filename=')) {
                        filename = disposition
                            .split('filename=')[1]
                            .replace(/"/g, '')
                            .replace(/\.ini$/i, '.txt');   // FORCE .txt
                    }

                    return response.blob().then(blob => ({ blob, filename }));
                })
                .then(({ blob, filename }) => {
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = filename;
                    document.body.appendChild(a);
                    a.click();
                    a.remove();
                    window.URL.revokeObjectURL(url);

                    showStatus('✓ Config file downloaded!', 'success');
                })
                .catch(error => {
                    showStatus('Error: ' + error.message, 'danger');
                })
                .finally(() => {
                    btn.disabled = false;
                    btn.innerHTML = '📥 Download Config File';
                });
        }


        function uploadConfig() {
            document.getElementById('configUploadModal').style.display = 'flex';
        }

        function closeConfigUploadDialog() {
            document.getElementById('configUploadModal').style.display = 'none';
            document.getElementById('configUploadStatus').innerHTML = '';
            document.getElementById('configFile').value = '';
        }

        document.getElementById('configUploadForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const fileInput = document.getElementById('configFile');
            if (!fileInput.files[0]) {
                document.getElementById('configUploadStatus').innerHTML = '<div class="alert alert-warning">Please select a file</div>';
                return;
            }

            const reader = new FileReader();
            reader.onload = async function(e) {
                const configContent = e.target.result;
                const statusDiv = document.getElementById('configUploadStatus');
                statusDiv.innerHTML = '<div class="alert alert-info">Uploading... <span class="spinner"></span></div>';

                try {
                    const response = await fetch('@Url.Action("UpdateConfig", "PC")', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: 'pcId=' + pcId + '&configContent=' + encodeURIComponent(configContent)
                    });

                    const result = await response.json();

                    if (result.success) {
                        statusDiv.innerHTML = '<div class="alert alert-success">✓ ' + result.message + '</div>';
                        setTimeout(() => {
                            closeConfigUploadDialog();
                            showStatus('Config uploaded successfully!', 'success');
                            setTimeout(() => location.reload(), 2000);
                        }, 1500);
                    } else {
                        statusDiv.innerHTML = '<div class="alert alert-danger">✗ Error: ' + result.message + '</div>';
                    }
                } catch (error) {
                    statusDiv.innerHTML = '<div class="alert alert-danger">✗ Error: ' + error + '</div>';
                }
            };

            reader.readAsText(fileInput.files[0]);
        });

        // ====================================
        // MODEL UPLOAD FUNCTIONS
        // ====================================

        function showUploadDialog() {
            document.getElementById('uploadModal').style.display = 'flex';
        }

        function closeUploadDialog() {
            document.getElementById('uploadModal').style.display = 'none';
            document.getElementById('uploadStatus').innerHTML = '';
            document.getElementById('modelFile').value = '';
        }

        document.getElementById('uploadForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const formData = new FormData();
            const fileInput = document.getElementById('modelFile');

            if (!fileInput.files[0]) {
                document.getElementById('uploadStatus').innerHTML = '<div class="alert alert-warning">Please select a file</div>';
                return;
            }

            formData.append('modelFile', fileInput.files[0]);
            formData.append('pcId', pcId);

            const statusDiv = document.getElementById('uploadStatus');
            statusDiv.innerHTML = '<div class="alert alert-info">Uploading... <span class="spinner"></span></div>';

            try {
                const response = await fetch('@Url.Action("UploadModel", "Model")', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    statusDiv.innerHTML = '<div class="alert alert-success">✓ ' + result.message + '</div>';
                    setTimeout(() => {
                        closeUploadDialog();
                        showStatus('Model uploaded successfully!', 'success');
                        setTimeout(() => refreshModels(), 2000);
                    }, 1500);
                } else {
                    statusDiv.innerHTML = '<div class="alert alert-danger">✗ Error: ' + result.message + '</div>';
                }
            } catch (error) {
                statusDiv.innerHTML = '<div class="alert alert-danger">✗ Error: ' + error + '</div>';
            }
        });

        // ====================================
        // UTILITY FUNCTIONS
        // ====================================

        function showStatus(message, type) {
            const statusDiv = document.getElementById('statusMessage');
            statusDiv.className = 'alert alert-' + type;
            statusDiv.innerHTML = message;
            statusDiv.style.display = 'block';
        }

        function hideStatus() {
            document.getElementById('statusMessage').style.display = 'none';
        }

        function showProgress(elementId, message) {
            document.getElementById(elementId).style.display = 'block';
            document.getElementById(elementId.replace('Progress', 'ProgressBar')).style.width = '0%';
            document.getElementById(elementId.replace('Progress', 'ProgressText')).textContent = message;
        }

        function updateProgress(barId, percent, message) {
            document.getElementById(barId).style.width = percent + '%';
            if (message) document.getElementById(barId.replace('Bar', 'Text')).textContent = message;
        }

        function hideProgress(elementId) {
            document.getElementById(elementId).style.display = 'none';
        }

        // ====================================
        // AUTO-REFRESH STATUS (Every 30s)
        // ====================================

        setInterval(function() {
            fetch('/PC/GetPCStatus?pcId=' + pcId).then(r => r.json()).then(data => {
                if (data.success) document.getElementById('lastHeartbeat').textContent = data.lastHeartbeat || 'Never';
            }).catch(() => {});
        }, 30000);

        // ====================================
        // MODAL CLICK HANDLERS
        // ====================================

        window.onclick = function(event) {
            const modal1 = document.getElementById('uploadModal');
            const modal2 = document.getElementById('configUploadModal');
            if (event.target === modal1) closeUploadDialog();
            if (event.target === modal2) closeConfigUploadDialog();
        }
    </script>
